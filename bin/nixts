#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413


"service"


import getpass


from nixt.config  import Config
from nixt.main    import init, wrap
from nixt.modules import face
from nixt.user    import iface
from nixt.utils   import forever, pidfile, privileges


Cfg = Config()
Cfg.mod = ",".join(modnames(face, iface)
Cfg.user = getpass.getuser()


initer = init


def main():
    "main"
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    for thr in initer(Cfg.mod, face, iface):
        print(thr)
        thr.join()
    forever()


if __name__ == "__main__":
    wrap(main)
