#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413,W0212


"service"


import getpass


from nixt.errors  import errors
from nixt.main    import Config, forever, initer, pidfile
from nixt.main    import modnames, privileges, wrap
from nixt.modules import face


Cfg = Config()
Cfg.mod = ",".join(modnames(face))
Cfg.user = getpass.getuser()


def main():
    "main"
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    initer(Cfg.mod, face)
    forever()


def wrapper():
    "Wrap main."
    wrap(main)
    errors(print)


if __name__ == "__main__":
    wrapper()
