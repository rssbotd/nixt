#!/usr/bin/env python3
# This file is placed in the Public Domain.
# pylint: disable=C0413


"service"


import getpass


from nixt.config  import Config


Cfg = Config()
Cfg.mod = "cmd,err,irc,rss,thr"
Cfg.user = getpass.getuser()


from nixt.errors  import errors
from nixt.main    import boot, init, wrap
from nixt.modules import face
from nixt.utils   import forever, pidfile, privileges


initer = init


def main():
    "main"
    boot()
    privileges(Cfg.user)
    pidfile(Cfg.pidfile)
    initer(Cfg.mod, face)
    forever()


if __name__ == "__main__":
    wrap(main)
    errors()
